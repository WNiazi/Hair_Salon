@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No clients have been added yet!</h3>
}

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Client</th>
      <th scope="col">Stylist</th>
    </tr>
  </thead>
  @foreach (Client client in Model)
  {
    <tbody>
      <tr>
        <td>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId })</td>
        <td>@client.Stylist.Name</td>
        <br>
      </tr>
    </tbody>
  }
</table>

<br>
<button>@Html.ActionLink("Add new client", "Create")</button><br>
<br>
<button>@Html.ActionLink("Home", "Index", "Home")</button>