@{
  Layout = "_Layout";
}
<ul>
  <table class="table table-striped">
    @using HairSalon.Models;

    <h1>Stylists</h1>

    @if (@Model.Count == 0)
    {
      <h3>No stylists have been added yet!</h3>
    }
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col"></th>
          <th scope="col">Name</th>
          <th scope="col">Specialty</th>
        </tr>
      </thead>
      @foreach (Stylist stylist in Model)
      {
        <tbody>
          <tr>
            <th scope="row">
            <td>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</td>
            <td>@Html.ActionLink($"{stylist.Specialty}", "Details", new { id = stylist.StylistId })</td>
            </th>
          </tr>
        </tbody>
      }
    </table>
</ul>


<button>@Html.ActionLink("Add new stylist", "Create")</button>
<button>@Html.ActionLink("Home", "Index", "Home")</button>